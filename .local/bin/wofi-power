#!/bin/sh

selected=$(printf '%s\n' Logout Suspend Reboot Shutdown | wofi --show dmenu --width 300 --height 190 | awk '{print tolower($1)}') # 

case $selected in
  logout)
    swaymsg exit;;
  suspend)
    exec systemctl suspend;;
  reboot)
    exec systemctl reboot;;
  shutdown)
    exec systemctl poweroff -i;;
esac
